{
  "compilerOptions": {
    "module": "esnext",
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node",
      "jasmine",
      "./spec"
    ],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "pretty": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "target": "es5"
  },
  "include": [
    "src"
  ]
}
